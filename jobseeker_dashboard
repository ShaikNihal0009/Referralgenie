    <script>
        function showDetails(selectedCategory) {
            document.getElementById('fresherDetails').style.display = 'none';
            document.getElementById('internshipDetails').style.display = 'none';
            document.getElementById('experiencedDetails').style.display = 'none';
            
            document.getElementById(selectedCategory).style.display = 'block';
        }

        function saveData() {
            let inputs = document.querySelectorAll('input:not([type="file"])');
            for (let input of inputs) {
                if (input.value.trim() === "") {
                    alert("Please fill all fields before saving.");
                    return;
                }
            }
            alert("Successfully saved");
        }
    </script>
